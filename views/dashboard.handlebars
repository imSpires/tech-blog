<section class="post-container">
  <div class="new-posts">
    <h2>Create New Post</h2>
    <form class="new-post-form">
      <div>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>

      <div>
        <label for="post-content">Content</label>
        <textarea name="post-content" id="" msg cols="70" rows="5" class="" placeholder="Message"></textarea>
      </div>

      <button type="submit" class="btn">Create</button>
    </form>
  </div>

  <div class="your-posts">
      {{#if posts.length}}

  <h2>Posts</h2>
  <ul>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
    {{/if}}
  </div>

</section>


<script src="/javascript/add-post.js"></script>